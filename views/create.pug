extends layout

block content
    form(method="POST" action="store").col-md-4.mx-auto
        .form-group
            label(for="crfirstName") First Name
            input(id="crfirstName" name="crfirstName" placeholder="Enter First Name" class="form-control" required="require")
            label(for="crlastName") Last Name
            input(id="crlastName" name="crlastName" placeholder="Enter Last Name" class="form-control" required="require")
            label(for="crPhone") Phone
            input(id="crPhone" type="number" name="crPhone" placeholder="Enter Phone" class="form-control" required="require")
            input(id="submit" type="submit" name="submit" value="Submit" class="btn btn-success my-3")