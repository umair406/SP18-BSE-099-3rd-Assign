extends layout

block content
    .container
        table.table
            tr
                th First Name
                th Course ID
                th Last Name
                th Course Fee
                th Actions
            each course in courses
                tr
                td  #{course.crfirstName}
                td  #{course._id}
                td  #{course.crlastName}
                td  #{course.crPhone}
                td
                    a(href="/"+course._id+"/edit").btn.btn-warning.mr-1 Update
                    a(href="/"+course._id+"/delete").btn.btn-danger Delete